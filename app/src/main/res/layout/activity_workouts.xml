<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutsActivity"
    android:background="@drawable/bordertwo">

    <TextView
        android:id="@+id/workoutsInfoTextView"
        android:layout_width="299dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:text="Welcome to the workouts routines! Here you can find the best workouts for both males and females! For optimal results, we recommend doing 3-5 workouts a week! Now let's train! "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/maleWorkoutsImageView"
        android:layout_width="232dp"
        android:layout_height="179dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutsInfoTextView"
        app:srcCompat="@drawable/malew" />

    <Button
        android:id="@+id/maleWorkoutsButton"
        android:layout_width="282dp"
        android:layout_height="203dp"
        android:layout_marginTop="26dp"
        android:background="#00FFFFFF"
        android:text="Workouts"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutsInfoTextView" />

    <ImageView
        android:id="@+id/femaleWorkoutsImageView"
        android:layout_width="220dp"
        android:layout_height="203dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maleWorkoutsImageView"
        app:srcCompat="@drawable/femalew" />

    <Button
        android:id="@+id/femaleWorkoutsButton"
        android:layout_width="282dp"
        android:layout_height="203dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:text="       Workouts"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maleWorkoutsImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>